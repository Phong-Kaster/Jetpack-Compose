<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="0dp">

    <!-- Album Art -->
    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="Album Art"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_nazi_wehtmatch" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:orientation="vertical">


        <!-- Title and Artist -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                style="@style/TextAppearance.Compat.Notification.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Song Title"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!--<TextView
                android:id="@+id/notification_artist"
                style="@style/TextAppearance.Compat.Notification.Info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Artist"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />-->

        </LinearLayout>

        <!-- Playback Controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Previous Button -->
            <ImageButton
                android:id="@+id/button_previous"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="previous"
                android:src="@drawable/ic_music_skip_previous" />

            <!-- Play/Pause Button -->
            <ImageButton
                android:id="@+id/button_play"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="play"
                android:src="@drawable/ic_music_play"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/button_pause"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="pause"
                android:src="@drawable/ic_music_pause"
                android:visibility="gone" />

            <!-- Next Button -->
            <ImageButton
                android:id="@+id/button_next"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="next"
                android:src="@drawable/ic_music_skip_next" />


            <!-- Next Button -->
            <ImageButton
                android:id="@+id/button_stop"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="next"
                android:src="@drawable/ic_music_stop" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
