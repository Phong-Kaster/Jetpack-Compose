<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--this setting ensures that status bar will be visible with transparent background-->
    <!--Theme Jetpack Compose separates 2 version: one for devices run on Android API 30 & higher, the other for Android API 29 & lower-->
    <style name="Core.Theme.JetpackCompose" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.JetpackCompose" parent="Core.Theme.JetpackCompose">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Lockscreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


</resources>